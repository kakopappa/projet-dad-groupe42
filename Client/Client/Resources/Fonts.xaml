<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="MainLabel" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Segoe WP Semibold" />
        <Setter Property="FontSize" Value="18" />
    </Style>
    
    <Style x:Key="SecondLabel" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Segoe WP SemiLight" />
        <Setter Property="FontSize" Value="16" />
    </Style>
    
    
</ResourceDictionary>